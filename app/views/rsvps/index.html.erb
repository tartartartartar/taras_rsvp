<h1>Listing rsvps</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Num persons</th>
    <th>Special</th>
    <th>Will attend</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rsvps.each do |rsvp| %>
  <tr>
    <td><%= rsvp.name %></td>
    <td><%= rsvp.email %></td>
    <td><%= rsvp.num_persons %></td>
    <td><%= rsvp.special %></td>
    <td><%= rsvp.will_attend %></td>
    <td><%= link_to 'Show', rsvp %></td>
    <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
    <td><%= link_to 'Destroy', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

